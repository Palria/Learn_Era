<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="5pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AllPageDiscussionsFragment">
    
    <LinearLayout
        android:id="@+id/featuredParentLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/secondary_app_color"
            />
        <LinearLayout
            android:id="@+id/featuredItemLayoutContainerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           />
    </LinearLayout>
    
    <LinearLayout
        
        android:id="@+id/loadingLayout"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ProgressBar
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:indeterminateTint="@color/teal_700"
            />
    </LinearLayout>
    
    <include layout="@layout/layout_no_data_found"
        android:id="@+id/noDataFound"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featuredParentLayoutId"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featuredParentLayoutId"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pageDiscussionsRecyclerListViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <View
            android:id="@+id/dummyViewId"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/discussButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_baseline_message_24"
        android:text="Add discussion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>