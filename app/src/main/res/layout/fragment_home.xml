                        app:tabTextAppearance="@style/MyCustomTextAppearance"
                        app:tabIndicator="@drawable/ic_baseline_minimize_24"
                        app:tabIndicatorFullWidth="false"
                        >


                    </com.google.android.material.tabs.TabLayout>
