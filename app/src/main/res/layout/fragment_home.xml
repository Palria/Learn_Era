                    </LinearLayout>


                </HorizontalScrollView>
-->
              </androidx.cardview.widget.CardView>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/booksItemContainer"
               android:layout_marginTop="5pt"
               tools:listitem="@layout/home_single_library_item_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_marginTop="10pt"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="8pt"
                    android:text="Popular Authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    tools:listitem="@layout/single_author_item_layout"
                    android:layout_marginTop="5pt"
                    android:id="@+id/popular_authors_listview"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularTutorialsContainer"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10pt"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>