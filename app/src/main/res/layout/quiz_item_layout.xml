<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="3pt"
    android:paddingHorizontal="3pt"
    android:layout_margin="2pt"
    android:clickable="true"
    android:id="@+id/parentItem"
    android:layout_marginStart="2pt"
    android:focusable="true"
    android:background="@drawable/rounded_border_gray_bg"
    android:backgroundTint="@color/light_blue_600"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    
        <TextView
            android:id="@+id/activeStatusTextViewId"
            android:ellipsize="end"
            android:text="Active"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="9sp"
            android:padding="2dp"
            android:textAllCaps="true"
            android:backgroundTint="@color/success_green"
            android:background="@drawable/rounded_border_gray_bg"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
        
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <TextView
        android:id="@+id/quizTitleTextViewId"
        android:textStyle="bold"
        android:textSize="8pt"
        android:layout_marginTop="2pt"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Java For Newbies Quiz"
        android:layout_height="wrap_content"/>
        
        <ImageButton
            android:id="@+id/menuButtonId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/white"
            android:visibility="gone"
            />
    </LinearLayout>
    
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            >
    <TextView
        android:layout_weight="1"
        android:id="@+id/questionCountTextViewId"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:text="Questions 10"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    <TextView
        android:layout_weight="1"
        android:id="@+id/timeLimitTextViewId"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:text="Time limit 250s"
        android:tooltipText="Quiz is still open"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <TextView
        android:layout_weight="1"
        android:id="@+id/feeTextViewId"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:text="Fee 3Q"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    <TextView
        android:layout_weight="1"
        android:id="@+id/rewardTextViewId"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:text="Reward $0.2"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   
</LinearLayout>

<LinearLayout
    android:paddingHorizontal="3pt"
    android:layout_marginTop="3pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="bottom"
    >
    
    <TextView
        android:id="@+id/descriptionTextViewId"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:padding="5dp"
        android:maxLines="4"
        android:text="This quiz "
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="italic"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded_border_gray_bg"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/startingTimeTextViewId"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:text="Time 23/8/2023 12:30PM"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textSize="11sp"
        android:backgroundTint="@color/secondary_app_color"
        android:background="@drawable/rounded_border_gray_bg"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        
        />
    <TextView
        android:id="@+id/joinQuizActionTextViewId"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:text="Join quiz"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:backgroundTint="@color/secondary_app_color"
        android:background="@drawable/rounded_border_gray_bg"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        
        />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="3pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    >

    <TextView
        android:layout_weight="1"
        android:id="@+id/authorNameTextViewId"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Henry Googler"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        />

    <LinearLayout
        android:paddingLeft="4pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
        <ImageView
            android:src="@drawable/ic_baseline_group_24"
            android:layout_width="7pt"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:layout_height="7pt"
            />
        <TextView
            android:id="@+id/participantCountViewId"
            android:layout_marginStart="3pt"
            android:text="23"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>

</LinearLayout>