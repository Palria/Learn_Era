<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="5pt"
    android:paddingVertical="10pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">




       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:gravity="center"
           android:paddingVertical="10pt"
           android:paddingHorizontal="5pt"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/icon"
               android:background="@drawable/ic_baseline_warning_amber_24"
               android:layout_width="45pt"
               app:tint="@color/teal_700"
               android:backgroundTint="@color/teal_700"
               android:layout_height="45pt"/>

           <TextView
               android:id="@+id/title"
               android:layout_marginTop="5pt"
               android:textSize="10pt"
               android:text="Warning!"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


           <TextView
               android:lineSpacingExtra="9sp"
               android:id="@+id/message"
               android:layout_marginTop="12pt"
               android:textSize="7pt"
               android:textAlignment="center"
               android:text="Some messages here to show! asdfasd f sadfasdfasd fasdfasdfadsfsda sdfadsf asdfasd fasd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>


</LinearLayout>