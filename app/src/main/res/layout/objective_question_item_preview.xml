<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/rounded_white_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingHorizontal="10pt"
            android:paddingVertical="15pt"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/grayDark"
                    android:layout_marginBottom="1pt"
                    android:text="Time Remain"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/grayDark"
                    android:textStyle="bold"
                    android:layout_marginBottom="1pt"
                    android:text="Max Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/remianTimeTextViewId"
                    android:textStyle="bold"
                    android:textColor="@color/success_green"
                    android:layout_marginBottom="7pt"
                    android:text=""
                    android:textSize="10pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/maxTimeTextViewId"
                    android:textColor="@color/success_green"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_marginBottom="7pt"
                    android:text="30s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:elevation="@dimen/cardview_default_elevation"
                android:layout_marginTop="10pt"
                app:cardCornerRadius="5pt"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10pt"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/questionTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="What is your option?"
                        android:textSize="10pt"
                        android:textStyle="bold"
                        android:layout_marginBottom="10pt"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_marginTop="4pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/radioOption1"
                    android:drawableTint="@color/white"
                    android:button="@null"
                    android:drawableStart="@drawable/baseline_radio_button_checked_24"
                    android:layout_marginBottom="4pt"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:paddingHorizontal="5pt"
                    android:background="@drawable/quiz_option_drawable"
                    android:checked="true"
                    android:drawablePadding="5pt"
                    android:text="Answer 1 "
                    />
                <RadioButton
                    android:drawablePadding="5pt"
                    android:textColor="@color/white"
                    android:id="@+id/radioOption2"
                    android:button="@null"
                    android:paddingHorizontal="5pt"
                    android:drawableStart="@drawable/baseline_radio_button_checked_24"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_marginBottom="4pt"
                    android:background="@drawable/quiz_option_drawable"
                    android:text="Answer 2"
                    />
                <RadioButton
                    android:drawablePadding="5pt"
                    android:textColor="@color/white"
                    android:id="@+id/radioOption3"
                    android:button="@null"
                    android:paddingHorizontal="5pt"
                    android:drawableStart="@drawable/baseline_radio_button_checked_24"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_marginBottom="4pt"
                    android:background="@drawable/quiz_option_drawable"
                    android:text="Answer 3"
                    />
                <RadioButton
                    android:drawablePadding="5pt"
                    android:textColor="@color/white"
                    android:id="@+id/radioOption4"
                    android:button="@null"
                    android:paddingHorizontal="5pt"
                    android:drawableStart="@drawable/baseline_radio_button_checked_24"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_marginBottom="4pt"
                    android:background="@drawable/quiz_option_drawable"
                    android:text="Answer 4"
                    />
            </RadioGroup>


            <LinearLayout
                android:layout_marginTop="15pt"
                android:paddingHorizontal="5pt"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:background="@drawable/default_auth_btn"
                    android:id="@+id/previousButtonId"
                    android:text="Prev"
                    android:textColor="@color/white"
                    android:paddingVertical="2pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />


                <Button
                    android:background="@drawable/default_auth_btn"
                    android:id="@+id/nextButtonId"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:paddingVertical="2pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:background="@drawable/default_auth_btn"
                android:layout_marginLeft="3pt"
                android:id="@+id/submitButtonId"
                android:text="Submit"
                android:textColor="@color/white"
                android:layout_marginVertical="3dp"
                android:paddingVertical="2pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:id="@+id/completionStatusViewId"
        android:text="Time elapsed"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingVertical="2pt"
        android:background="@drawable/default_auth_btn"
        android:backgroundTint="@color/grayDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>