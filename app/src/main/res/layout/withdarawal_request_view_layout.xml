<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <TextView
        android:id="@+id/requestInfoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2pt"
        android:layout_weight="1"
        android:paddingHorizontal="3pt"
        android:paddingVertical="3pt"
        android:text="0-ID-YTF-DATE-TODAY"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/approveRequestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2pt"
        android:background="@drawable/default_outlined_button"
        android:foreground="@android:color/transparent"
        android:paddingHorizontal="3pt"
        android:paddingVertical="3pt"
        android:text="Mark as paid"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>