<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5pt"
    android:layout_margin="2pt"
    android:clickable="true"
    android:id="@+id/parentItem"
    android:layout_marginStart="2pt"
    android:focusable="true"
    android:background="@drawable/rounded_border_gray_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingHorizontal="3pt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="20pt"
                app:riv_corner_radius="5pt"
                app:riv_oval="true"
                android:src="@drawable/default_profile"
                android:layout_height="20pt"/>
            <LinearLayout
                android:layout_marginStart="2pt"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/classTitleTextViewId"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Saugat-Henry Class"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grayDark"
                        android:id="@+id/authorNameTextViewId"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="normal"
                        android:text="Henry Googler"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        />
                    <TextView
                        android:textAlignment="center"
                        android:text="·"
                        android:layout_width="4pt"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/activeStatusTextViewId"
                        android:ellipsize="end"
                        android:text="Active"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:padding="2dp"
                        android:textAllCaps="true"
                        android:backgroundTint="@color/success_green"
                        android:background="@drawable/rounded_border_gray_bg"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:text="·"
                        android:layout_width="4pt"
                        android:layout_height="wrap_content"/>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        >
                        <ImageView
                            android:src="@drawable/ic_baseline_group_24"
                            android:layout_width="7pt"
                            android:layout_gravity="center"
                            app:tint="@color/teal_700"
                            android:layout_height="7pt"
                            />
                        <TextView
                            android:id="@+id/studentCountViewId"
                            android:layout_marginStart="1pt"
                            android:text="0"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textStyle="normal"
                            android:textColor="@color/grayDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    
    
    <LinearLayout
        android:paddingHorizontal="5pt"
        android:paddingVertical="5pt"
        android:layout_marginVertical="5pt"
        android:background="@drawable/quiz_item_background_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/descriptionTextViewId"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAlignment="textStart"
            android:paddingVertical="5pt"
            android:paddingHorizontal="1pt"
            android:text="This class "
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/startingTimeTextViewId"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_marginEnd="20dp"
            android:text="Starting Time 23/8/2023 12:30PM"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold|italic"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            />

        <TextView
            android:id="@+id/endingTimeTextViewId"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_marginEnd="20dp"
            android:text="Ending Time 23/8/2023 12:30PM"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold|italic"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        
        <ImageButton
            android:id="@+id/menuButtonId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/white"
            android:visibility="gone"
            />
    </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            app:dividerColor="@color/gray"
            android:layout_marginVertical="3pt"
            android:layout_height="1dp"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal">
    <TextView
        android:layout_weight="1"
        android:id="@+id/questionCountTextViewId"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:text="Questions 10"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
    <TextView
        android:layout_weight="1"
        android:id="@+id/timeLimitTextViewId"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:text="Time limit 250s"
        android:tooltipText="Class is still open"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/feeTextViewId"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="center"
                android:text="Fee 3Q"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="/"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/rewardTextViewId"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="center"
                android:text="Reward $0.2"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            app:dividerColor="@color/gray"
            android:layout_marginVertical="3pt"
            android:layout_height="1dp"/>

   
</LinearLayout>

<LinearLayout
    android:paddingHorizontal="3pt"
    android:layout_marginTop="3pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="bottom"
    >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        >

    <TextView
        android:id="@+id/joinClassActionTextViewId"
        android:layout_marginTop="10dp"
        android:paddingVertical="7pt"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:text="Join class"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:background="@drawable/rounded_border_primary_bg"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="25pt" />
</LinearLayout>
<LinearLayout
    android:layout_marginTop="3pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    >




    </LinearLayout>

</LinearLayout>

</LinearLayout>