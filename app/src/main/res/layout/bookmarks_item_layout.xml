<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="5pt"
    android:layout_marginTop="2pt"
    android:paddingVertical="3pt"
    android:clickable="true"
    android:layout_marginHorizontal="5pt"
    android:background="@drawable/rounded_border_gray_bg"
    android:id="@+id/parentItem"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="20pt"
            android:id="@+id/icon"
            app:riv_corner_radius="4pt"
            app:riv_oval="false"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/book_cover2"
            android:layout_height="20pt"/>

        <LinearLayout
            android:paddingLeft="8pt"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="8pt"
                android:text="How to crack a java interview freshors for free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/description"
                android:text="Thsi sis the amzain comment i like to have this app forever use and cool."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:textSize="5pt"
        android:id="@+id/dateCreated"
        android:text="Jan 05"
        android:layout_marginTop="3pt"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>