<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="center"
    android:gravity="start"
    android:id="@+id/parentItem"
    android:paddingVertical="1pt"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    app:cardCornerRadius="4pt"
    app:contentPaddingLeft="2pt"
    app:contentPaddingTop="5pt"
    app:contentPaddingBottom="5pt"
    android:layout_marginVertical="1dp"
    android:layout_marginHorizontal="5pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="5pt"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/icon"
                android:src="@drawable/book_cover"
                android:layout_width="20pt"
                android:tint="@color/teal_700"
                app:riv_corner_radius="7pt"
                android:foregroundTint="@color/teal_700"
                android:backgroundTint="@color/teal_700"
                android:scaleType="centerCrop"
                android:layout_height="20pt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Display1"
                android:textSize="8pt"
                android:text="You created a new Library in the profile."
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="2pt"
                android:id="@+id/body"
                android:textSize="7pt"
                android:text="Hello i am fine how are you bro ? :)"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginTop="2pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:tint="@color/grayDark"
                    android:layout_marginRight="3pt"
                    android:src="@drawable/ic_outline_watch_later_24"
                    android:layout_width="7pt"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_marginTop="1pt"
                    android:text="On Jan 01 2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>

        <ImageView
            app:tint="@color/grayDark"
            android:padding="5dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="3pt"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>


</LinearLayout>