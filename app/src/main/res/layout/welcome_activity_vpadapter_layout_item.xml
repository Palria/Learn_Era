<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10pt"
    android:paddingVertical="10pt"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image"
        android:scaleType="fitCenter"
        android:src="@drawable/undraw_personal_notebook"
        android:layout_width="wrap_content"
        android:layout_height="80pt"/>

    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textAlignment="center"
        android:layout_marginTop="15pt"
        android:text="Unlimited Personal Library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/body"
        android:textColor="@color/grayDark"
        android:textSize="7pt"
        android:textAlignment="center"
        android:layout_marginTop="15pt"
        android:text="You can create infinite numbers of library for personal use and that Find."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>