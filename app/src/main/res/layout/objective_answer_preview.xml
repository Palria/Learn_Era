<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="5dp"
    android:background="@drawable/ripple_background"
    >

    <LinearLayout
        android:paddingHorizontal="10dp"
        android:paddingVertical="10pt"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/questionTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="What is your name?"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10pt"/>
        <RadioButton
            android:textColor="@color/white"
            android:id="@+id/answerOptionButtonId"
            android:drawableTint="@color/white"
            android:button="@null"
            android:drawableStart="@drawable/baseline_radio_button_checked_24"
            android:layout_marginBottom="4pt"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:paddingHorizontal="5pt"
            android:background="@drawable/quiz_option_drawable"
            android:checked="true"
            android:drawablePadding="5pt"
            android:text="Ans..."
            />
        <TextView
            android:textStyle="bold"
            android:textSize="8pt"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/statusViewId"
            android:text="Status: Failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>